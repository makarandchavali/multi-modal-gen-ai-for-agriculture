<body>
  <div class="container">
    <div class="header-container">
      <img src="static/images/logo.png" alt="Farmacy Logo">
    </div>
    <div class="chat-container">
      <div class="chat-window" id="chat-window"></div>
      <form id="combined-form">
        <div class="input-container">
          <div class="file-input-container">
            <label for="image-input">Upload Image</label>
            <input type="file" id="image-input" name="image" accept="image/*">
          </div>
          <div class="chat-input-container">
            <input type="text" id="chat-input" name="question" placeholder="Enter your question or upload an image">
          </div>
          <button class="send-button" type="submit">Send</button>
        </div>
      </form>
    </div>
  </div>
  <script>
    const combinedForm = document.getElementById('combined-form');
    const chatWindow = document.getElementById('chat-window');
    const chatInput = document.getElementById('chat-input');
    const imageInput = document.getElementById('image-input');
    function addMessage(type, text) {
      const messageDiv = document.createElement('div');
      messageDiv.classList.add('message', ${type}-message);

      messageDiv.innerText = text;
      chatWindow.appendChild(messageDiv);
      chatWindow.scrollTop = chatWindow.scrollHeight;
    }
    function addAcknowledgement(text) {
      const ackDiv = document.createElement('div');
      ackDiv.classList.add('acknowledgement');
      ackDiv.innerText = text;
      chatWindow.appendChild(ackDiv);
      chatWindow.scrollTop = chatWindow.scrollHeight;
    }
    function displayImage(file) {
      const reader = new FileReader();
      reader.onload = function (e) {
        const img = document.createElement('img');
        img.src = e.target.result;
        img.classList.add('uploaded-image');
        const imageContainer = document.createElement('div');
        imageContainer.classList.add('message', 'user-message');
        imageContainer.appendChild(img);
        chatWindow.appendChild(imageContainer);
        chatWindow.scrollTop = chatWindow.scrollHeight;
      };
      reader.readAsDataURL(file);
    }
    imageInput.addEventListener('change', (e) => {
      if (imageInput.files[0]) {
        displayImage(imageInput.files[0]);
        addAcknowledgement('Image uploaded successfully. Click "Send" to process.');
      }
    });
    combinedForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData();
      if (imageInput.files[0]) {
        formData.append('image', imageInput.files[0]);
      }
      const question = chatInput.value.trim();
      if (question) {
        formData.append('question', question);
        addMessage('user', You: ${question});

        addAcknowledgement('Question received. Processing...');
      }
      if (!imageInput.files[0] && !question) {
        alert('Please upload an image or enter a question.');
        return;
      }

      const response = await fetch('/process', {
        method: 'POST',
        body: formData
      });
      const result = await response.json();
      
    });
  </script>
</body>
